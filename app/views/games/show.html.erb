<p>
  <strong>Player name</strong>
  <%= @game.player_array[0].name  %>
</p>

<p>
    <strong>Bankroll</strong>
    <%= @game.player_array[0].bankroll  %>
</p>

<%= form_tag('/wager', method: 'get') do %>
    <p>
      <%= label_tag(:wager, 'Wager:') %>
      <%= text_field_tag(:wager) %>
      <%= submit_tag('Wager') %>
    </p>

<% end %>